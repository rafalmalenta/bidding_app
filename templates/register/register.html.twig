{% extends 'base.html.twig' %}

{% block title %}Register account{% endblock %}

{% block body %}
{% include ('nav.html.twig') %}

<form method="post" class="text-center ">

    {% for messege in  app.flashes('error') %}
        <div {{  app.session.flashBag.peek('error')|length >0 ? '': 'class="alert alert-danger"'}}>{{ messege }}</div>
    {% endfor %}


    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>

    {% else %}
    <h1 class="h3 mb-3 font-weight-normal">Register account</h1>
    <label for="inputEmail">Email</label>
    <input type="email" name="email" id="inputEmail" class="form-control" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>
    <label for="inputPassword">Retype password</label>
    <input type="password" name="password2" id="inputPassword2" class="form-control" required>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    />  

    <button class="btn btn-lg btn-primary" type="submit">
        Register Account
    </button>
    {% endif %}
</form>

{% endblock %}
